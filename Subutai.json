{
  "name": "${environmentName}",
  "description": "Minio Cluster",
  "version": "1.0.0",
  "author": "https://github.com/absidish",
  "containers": [
    {
      "hostname": "minio",
      "template": "debian-stretch",
      "peer-criteria": "gr1",
      "size": "CUSTOM",
      "ram": {
        "type": "ram",
        "value": "${ram}"
      },
      "cpu": {
        "type": "cpu",
        "value": "${cpu}"
      },
      "disk": {
        "type": "disk",
        "value": "${disk}"
      },
     "port-mapping": [
        {
          "protocol": "https",
          "domain": "${domain}",
          "internal-port": "9199",
          "external-port": "443",
          "ssl_backend": "true"
        }
      ],
      "peer-layout": "d2"
    }
  ],
  "peer-layouts": [
    {
      "name": "d2",
      "peer-count": "${peerCount}",
      "container-per-peer": "${containerPerPeerCount}"
    }
  ],
  "peer-criteria": [
    {
      "name": "gr1"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/absidish/minio/archive/master.zip",
    "ansible-playbook": "main.yml",
    "extra-vars": [
      
    ],
    "groups": [
      {
        "name": "servers",
        "hostnames": [
          "minio"
        ]
      }
    ]
  },
  "user-variables": {
    "environmentName": {
      "description": "Enter the environment name",
      "type": "string",
      "default": "minioCluster",
      "validation": "[a-zA-Z0-9]+"
    },
    "containerPerPeerCount": {
      "description": "Containers per peer count",
      "type": "int",
      "default": "1",
      "validation": "[0-9]+"
    },
    "peerCount": {
      "description": "peer count",
      "type": "int",
      "default": "1",
      "validation": "[0-9]+"
    },
    "containerSize": {
            "description": "Container Size",
            "type": "enum",
            "default": "SMALL",
            "validation": "SMALL,MEDIUM,LARGE,HUGE"
    },
      "ram": {
      "description": "RAM in MB",
      "type": "int",
      "default": "128",
      "validation": "[0-9]+"
    },
      "cpu": {
      "description": "CPU in %",
      "type": "int",
      "default": "10",
      "validation": "[0-9]+"
     },
      "disk": {
      "description": "DISK in GB",
      "type": "int",
      "default": "10",
      "validation": "[0-9]+"
    },
    "domain": {	
      "description": "Enter the domain name",	
      "type": "domain",	
      "default": "change.the.domain",	
      "validation": "[a-zA-Z0-9]+"	
    }
  }
}
